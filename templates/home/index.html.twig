{% block body %}
    {% for listPost in listPosts %}
        <section>
            <article class="article">
                <div class="box">
                    <h3 class="title">{{ listPost.title }}</h3>
                    <div class="info">
                        <div> {{ listPost.author.firstname}} {{ listPost.author.lastname}} </div>
                        <div> {{ listPost.category.name }}</div>
                    </div>
                    <p>
                        {{ listPost.content | slice(0, 150)}}[..]
                    </p>
                    <div class="btns text-center">
                        <a class="btn btn-primary" href="{{path('post/detail',{'id': listPost.id}) }}">
                            <span>
                                En lire Plus
                            </span>
                        </a>
                    </div>
                </div>
            </article>
    {% endfor %}
